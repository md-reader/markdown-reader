    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^4.10.7",
    "svg-loader": "^0.0.2",
    "typescript": "^4.9.5",
    "webpack": "^5.88.1",
    "webpack-cli": "^4.10.0",
    "webpack-ext-reloader": "^1.1.12",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "@md-reader/markdown-it-mermaid": "^0.5.1",
    "@md-reader/theme": "^1.0.29",
    "@smui/button": "^4.2.0",
    "@smui/form-field": "^4.2.0",
    "@smui/segmented-button": "^4.2.0",
